<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.drugsrequests.DrugsRequestsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/drugsRequestsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?android:attr/actionBarSize" />

    <at.markushi.ui.CircleButton
        android:id="@+id/add_drug_request"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_search"
        android:visibility="gone"
        app:cb_color="@color/teal_200"
        app:cb_pressedRingWidth="8dip"
        app:layout_constraintBottom_toBottomOf="@+id/drugsRequestsRecyclerView"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>